@model MvcCv.Models.Entity.TblSertifikalarım

@{
    ViewBag.Title = "Sertifika Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:30px;">
    <h3>Sertifika Güncelle</h3>
    <form method="post">
        @Html.HiddenFor(x => x.ID)

        <div class="form-group">
            <label>Açıklama</label>
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Tarih</label>
            <input type="date" name="Tarih" class="form-control" required value="@Model.Tarih.ToString()" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a href="/Sertifika/Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
