@model MvcCv.Models.Entity.TblSertifikalarım

@{
    ViewBag.Title = "Yeni Sertifika Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="margin-top:30px;">
    <h3>Yeni Sertifika Ekle</h3>
    <form method="post">
        <div class="form-group">
            <label>Açıklama</label>
            <input type="text" class="form-control" name="Aciklama" required />
        </div>
        <div class="form-group">
            <label>Tarih</label>
            <input type="date" class="form-control" name="Tarih" required />
        </div>
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Sertifika/Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
