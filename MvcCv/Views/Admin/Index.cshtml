@model  List<MvcCv.Models.Entity.TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Gerekli CSS ve JS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<!-- Tabloya stil ekleyen CSS -->
<style>
    table td, table th {
        padding: 12px 16px !important;
        vertical-align: middle;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .table {
        margin-top: 20px;
    }

    .search-form {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 0.875rem;
    }
</style>

<!-- Sayfa içeriği -->
<div class="container">

    <!-- Özellik Tablosu -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Kullanıcı Adı</th>
                    <th>Şifre</th>
                    <th>Sil</th>
                    <th>Düzenle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admin in Model)
                {
                    <tr>
                        <td>@admin.ID</td>
                        <td>@admin.KullaniciAdi</td>
                        <td>@admin.Sifre</td>
                        <td>
                            <a href="#" class="btn btn-danger btn-sm btn-sil" data-id="@admin.ID">Sil</a>
                        </td>
                        <td>
                            <a href="/Admin/AdminEkle/@admin.ID" class="btn btn-primary btn-sm">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <a href="/Admin/AdminEkle" class="btn btn-dark btn-sm mt-3">Yeni Admin Girişi</a>


</div>

<script>
    $(document).ready(function () {
        // Silme işlemi
        $(".btn-sil").click(function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            swal({
                title: "Emin misiniz?",
                text: "Bu Admin silindikten sonra geri alınamaz!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    window.location.href = "/Admin/AdminSil/" + id;
                } else {
                    swal("Admin silinmedi.");
                }
            });
        });

        // TempData başarı mesajı gösterimi
        var successMessage = '@(TempData["SuccessMessage"] ?? "")';
        if (successMessage) {
            swal({
                title: "İşlem başarılı!",
                text: successMessage,
                icon: "success",
                button: "Tamam",
            });
        }
    });
</script>