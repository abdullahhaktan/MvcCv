@using MvcCv.Models.Entity

@model  TblHakkimda

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Hakkımda</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("HakkımdaGuncelle", "Hakkımda", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ID)

                <div class="mb-3">
                    @Html.LabelFor(model => model.Ad, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Ad, new { @class = "form-control", placeholder = "İsim Girin" })
                    @Html.ValidationMessageFor(model => model.Ad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Soyad, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Soyad, new { @class = "form-control", placeholder = "Soyisim Girin" })
                    @Html.ValidationMessageFor(model => model.Soyad, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Adres, new { @class = "form-control", placeholder = "Adres girin" })
                    @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Telefon, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Telefon, new { @class = "form-control", placeholder = "Telefon girin" })
                    @Html.ValidationMessageFor(model => model.Telefon, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Mail, new { @class = "form-control", placeholder = "Mail Girin" })
                    @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Resim, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Resim, new { @class = "form-control", placeholder = "Resim Girin" })
                    @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Aciklama, htmlAttributes: new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Aciklama, new { @class = "form-control", placeholder = "Açıklama Girin" })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-dark btn-sm">Kaydet</button>
            }
        </div>
    </div>
</div>